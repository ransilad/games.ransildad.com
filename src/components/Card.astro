---
const { id, title, img, description, link } = Astro.props
---
<a href={link ?? '#'}>
    <div id={id} class="overflow-hidden rounded-xl bg-white shadow-md duration-200 md:hover:scale-105 md:hover:shadow-xl">
        <img src={img} alt="plant" class="h-auto w-full" />
        <div class="p-5">
            <p class="font-bold text-gray-700">
                {title}
            </p>
            {description && (
                <p class="text-gray-500 text-sm mt-2">
                    {description}
                </p>
            )}
        </div>
    </div>
</a>
